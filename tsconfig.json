{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/**/*"]
}
